<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    app:contentPadding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12"
        >
        <RelativeLayout
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RadioButton
                    android:id="@+id/checkIsBorrow"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />
                <ImageButton
                    android:id="@+id/removeCartBtn"
                    android:layout_marginStart="3dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_remove_circle"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/equipmentRL"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginEnd="5dp"
                android:background="@color/gray02"
                >
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

            </RelativeLayout>
            <TextView
                android:id="@+id/titleTv"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:text="Equipment Title"
                android:layout_toEndOf="@id/equipmentRL"
                android:maxLines="1"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/descriptionTv"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="match_parent"
                android:text="Equipment desciption"
                android:layout_toEndOf="@id/equipmentRL"
                android:maxLines="3"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTv"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/categoryTv"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:maxLines="1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/textQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:layout_toEndOf="@id/equipmentRL"
                android:layout_below="@id/descriptionTv"
                android:textSize="16sp"
                />
            <LinearLayout
                android:id="@+id/layoutOperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quantityTv"
                android:layout_toEndOf="@id/equipmentRL"
                android:layout_above="@id/dateTv"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/minusButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    />


                <TextView
                    android:id="@+id/quantityTextChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/plusButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/quantityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:text="3"
                android:layout_toEndOf="@id/textQuantity"
                android:layout_below="@id/descriptionTv"
                android:maxLines="1"
                android:textSize="16sp"
                android:paddingTop="1dp"
                />
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:text="dd/MM/yyyy"
                android:layout_toEndOf="@id/equipmentRL"
                android:layout_toStartOf="@id/categoryTv"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:maxLines="1"
                />

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>